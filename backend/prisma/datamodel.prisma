enum Permission {
  ADMIN
  USER
}

enum PageType {
  PAGE
  NEWS
  ARTICLE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Page {
  id: ID! @unique
  title: String!
  image: String
  slug: String!
  type: PageType!
  vertical: String
  blocks: [Block]!
  boxes: [Box]!
  prosAndCons: [ProsAndCons]!
}

type Block {
  id: ID! @unique
  page: Page!
  title: String
  image: String
  video: String
  style: String
  content: String
  order: Int
}

type Box {
  id: ID! @unique
  page: Page!
  title: String
  image: String
  video: String
  style: String
  content: String
  order: Int
}

type ProsAndCons {
  id: ID! @unique
  page: Page!
  title: String
  order: Int
  pros: [Pros]! @relation(name: "ProsOnProsAndCons", onDelete: CASCADE)
  cons: [Cons]! @relation(name: "ConsOnProsAndCons", onDelete: CASCADE)
}

type Pros {
  id: ID! @unique
  prosAndCons: ProsAndCons! @relation(name: "ProsOnProsAndCons", onDelete: SET_NULL)
  content: String
  order: Int
}

type Cons {
  id: ID! @unique
  prosAndCons: ProsAndCons! @relation(name: "ConsOnProsAndCons", onDelete: SET_NULL)
  content: String
  order: Int
}
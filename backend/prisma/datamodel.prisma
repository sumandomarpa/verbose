enum Permission {
  ADMIN
  USER
}

enum PageType {
  PAGE
  NEWS
  ARTICLE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Page {
  id: ID! @unique
  title: String!
  image: String
  slug: String!
  type: PageType!
  vertical: String
  blocks: [Block]!
  boxes: [Box]!
}

type Block {
  id: ID! @unique
  page: Page!
  title: String
  image: String
  video: String
  style: String
  content: String
  order: Int
}

type Box {
  id: ID! @unique
  page: Page!
  title: String
  image: String
  video: String
  style: String
  content: String
  order: Int
}
